{% extends '::layout.html.twig' %}

{% block page_content %}
    <div class="row">
        <div class="col-md-10 col-md-offset-1 col-xs-10 col-xs-offset-1">
            <div class="row">
                <div class="col-md-10 col-md-offset-2">
                    <h1>Modifier mon avatar</h1>
                    {% if app.user.webPath is empty %}
                        <img src="{{ asset('img/defaultProfile_128.png') }}" class="marginAuto"><br>
                    {% else %}
                        <img src="{{ asset(app.user.webPath) }}" class="marginAuto"><br>
                    {% endif %}
                </div>
            </div>

            {{ form_start(form, {'attr': {'class': 'form-horizontal'}}) }}
                <div class="form-group row">
                    <div class="col-md-10 col-md-offset-2">
                        {{ form_errors(form) }}
                        {{ form_errors(form.file) }}
                    </div>
                </div>
                <div class="form-group row">
                    {{ form_label(form.file, 'Image', {'label_attr': {'class': 'control-label col-md-2'}}) }}
                    <div class="col-md-10">
                        {{ form_widget(form.file, {'attr': {'class': 'form-control'}}) }}
                    </div>
                </div>
                <div class="form-group row">
                    <div class="col-md-10 col-md-offset-2">
                        128*128 px de taille inférieure à 1 Mo en format .png
                    </div>
                </div>
                <div class="form-group row">
                    <div class="col-md-2 col-md-offset-2">
                        {{ form_widget(form.save, {'label': 'Enregistrer', 'attr': {'class': 'btn btn-default custom-btn'}}) }}
                    </div>
                </div>
            {{ form_end(form) }}
        </div>
    </div>
{% endblock page_content %}
