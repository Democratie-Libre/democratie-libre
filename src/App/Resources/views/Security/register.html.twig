                <div class="col-sm-7">
                    {{ form_widget(registerForm.plainPassword.first, {'attr': {'class': 'form-control'}}) }}
                </div>
            </div>

            <div class="form-group row">
                {{ form_label(registerForm.plainPassword.second, 'Veuillez confirmer le mot de passe', {'label_attr': {'class': 'col-sm-4 control-label'}}) }}
