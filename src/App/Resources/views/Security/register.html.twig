                <div class="col-sm-7">
                    {{ form_widget(registerForm.plainPassword.second, {'attr': {'class': 'form-control'}}) }}
                </div>
            </div>

            <div class="col-sm-7 col-sm-offset-4">
                {{ form_widget(registerForm.Enregistrer) }}
            </div>
        {{ form_end(registerForm) }}

    </div>
</div>

{% endblock page_content %}
