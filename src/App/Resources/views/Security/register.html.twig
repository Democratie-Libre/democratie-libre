{% extends '::layout.html.twig' %}

{% block page_content %}

<div class="row">
    <div class="col-xs-10 col-xs-offset-1 col-sm-8 col-sm-offset-2 col-md-6 col-md-offset-3">
        <h1>Inscription</h1>

        {{ form_start(registerForm, {'attr': {'class': 'form-horizontal'}}) }}
            {{ form_errors(registerForm) }}
            <div class="form-group row">
                {{ form_label(registerForm.username, 'Nom dâ€™utilisateur', {'label_attr': {'class': 'col-sm-4 control-label'}}) }}
                {{ form_errors(registerForm.username) }}
                <div class="col-sm-7">
                    {{ form_widget(registerForm.username, {'attr': {'class': 'form-control'}}) }}
                </div>
            </div>

            <div class="form-group row">
