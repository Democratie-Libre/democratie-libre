{% extends 'Article/layout_article.html.twig' %}

{% block page_content %}
    {{ form_start(form, {'attr': {'class': 'form-horizontal'}}) }}
        <div class="form-group row">
            <div class="col-md-10 col-md-offset-2">
                {{ form_errors(form) }}
                {{ form_errors(form.removing_explanation) }}
            </div>
        </div>
        <div class="form-group row">
            {{ form_label(form.removing_explanation, 'Removing explanation', {'label_attr': {'class': 'control-label col-md-2'}}) }}
            <div class="col-md-10">
                {{ form_widget(form.removing_explanation, {'attr': {
                    'class': 'form-control form-abstract-textarea',
                    'placeholder' : 'Here express why you want to remove the article from the proposal'
                    }})
                }}
            </div>
        </div>
        <div class="form-group row">
            <div class="col-md-2 col-md-offset-2">
                {{ form_widget(form.save, {'label': 'Confirm removal', 'attr': {'class': 'btn btn-default custom-btn'}}) }}
            </div>
        </div>
    {{ form_end(form) }}
{% endblock page_content %}
