{% extends 'Proposal/layout_proposal.html.twig' %}

{% block page_content %}
    {% if is_granted('locked', proposal) %}
        <div class="center">
            CETTE PROPOSITION A ÉTÉ FERMÉE PAR L'ADMINISTRATION
        </div>
        <hr>
        <div class="center">
            {{ proposal.lockingExplanation }}
        </div>
        <hr>
    {% endif %}
    <div class="section-menu row">
        <ul>
            <li><a href="{{ path('proposal_show_motivation', {'slug': proposal.slug}) }}">Motifs</a></li>
            <li class="active"><a href="{{ path('proposal_show_articles', {'slug': proposal.slug}) }}">Articles</a></li>
            <li><a href="{{ path('proposal_show_discussions', {'slug': proposal.slug}) }}">Salon</a></li>
            <li><a href="{{ path('proposal_show_versioning', {'slug': proposal.slug}) }}">Historique</a></li>
            {% if is_granted('ROLE_ADMIN') %}
                <li><a href="{{ path('proposal_show_administration', {'slug': proposal.slug}) }}">Administration</a></li>
            {% endif %}
        </ul>
    </div>
    <div class="tab-content">
        {% if is_granted('published', proposal) and is_granted('edit', proposal) %}
            <div class="col-md-3 col-md-offset-9">
                <a href="{{ path('article_add', {'proposalSlug': proposal.slug}) }}" class="btn btn-default custom-btn">Ajouter un article</a>
            </div>
        {% endif %}
        <div class="proposal-articles">
            {% for article in proposal.articles %}
                <h4><a href="{{ path('article_show', {'slug': article.slug}) }}" class="article-link">Article {{ article.number }}<br>{{ article.title }}</a></h4>
                <p>{{ article.content | markdown }}</p>
                <div class="article-motivation">
                    {% if article.motivation %}
                        <h4>Motifs</h4>
                        {{ article.motivation | markdown }}
                    {% endif %}
                </div>
            {% endfor %}
        </div>
    </div>
{% endblock page_content %}
