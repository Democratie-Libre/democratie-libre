{% extends '::layout.html.twig' %}

{% block page_content %}
    <div class="row">
        <div class="col-md-10 col-md-offset-1 col-xs-10 col-xs-offset-1">
            <div class="row">
                <div class="col-md-10 col-md-offset-2">
                    <h1>Publication de la proposition<br><span class="italic">{{ proposal.title }}</span></h1>
                    <p>Dans quelle thématique souhaitez-vous publier ?</p>
                </div>
            </div>

            {{ form_start(form, {'attr': {'class': 'form-horizontal'}}) }}
                <div class="form-group row">
                    <div class="col-md-10 col-md-offset-2">
                        {{ form_errors(form) }}
                        {{ form_errors(form.theme) }}
                    </div>
                </div>
                <div class="form-group row">
                    {{ form_label(form.theme, 'Host theme', {'label_attr': {'class': 'control-label col-md-2'}}) }}
                    <div class="col-md-10">
                        {{ form_widget(form.theme, {'attr': {
                            'class'       : 'form-control',
                            }})
                        }}
                    </div>
                </div>
                <div class="form-group row">
                    <div class="col-md-10 col-md-offset-2">
                        <div class="panel panel-danger">
                            <div class="panel-heading">
                                <span class="glyphicon glyphicon-alert"></span>
                            </div>
                            <div class="panel-body">
                                Une fois votre proposition publiée, vous ne pourrez plus la retirer de l'arbre.
                            </div>
                        </div>
                    </div>
                </div>
                <div class="form-group row">
                    <div class="col-md-2 col-md-offset-2">
                        {{ form_widget(form.save, {'label': 'Save', 'attr': {'class': 'btn btn-default custom-btn'}}) }}
                    </div>
                </div>
            {{ form_end(form) }}
        </div>
    </div>
{% endblock page_content %}
