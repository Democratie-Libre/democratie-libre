{% extends 'Proposal/layout_proposal.html.twig' %}

{% block page_content %}
    <div class="section-menu row">
        <ul>
            <li><a href="{{ path('proposal_show_motivation', {'slug': proposal.slug}) }}">Motifs</a></li>
            <li><a href="{{ path('proposal_show_articles', {'slug': proposal.slug}) }}">Articles</a></li>
            <li class="active"><a href="{{ path('proposal_show_discussions', {'slug': proposal.slug}) }}">Salon</a></li>
            <li><a href="{{ path('proposal_show_versioning', {'slug': proposal.slug}) }}">Historique</a></li>
            {% if is_granted('show_admin_panel', proposal) %}
                <li><a href="{{ path('proposal_show_administration', {'slug': proposal.slug}) }}">Administration</a></li>
            {% endif %}
        </ul>
    </div>
    <div class="tab-content">
        {% if is_granted('published', proposal) %}
            <div class="col-md-3 col-md-offset-7">
                <a href="{{ path('public_discussion_add_to_proposal', {'slug': proposal.slug}) }}" class="btn btn-default custom-btn">Ouvrir une discussion</a>
            </div>
            <div class="btn-group custom-btn-group ">
                <button class="dropdown-toggle btn btn-default" data-toggle="dropdown"><span class="glyphicon glyphicon-chevron-down"></span></button>
                <ul class="dropdown-menu pull-right">
                    {% if locked_discussions %}
                        <li><a href="{{ path('proposal_show_discussions', {'slug': proposal.slug}) }}">Voir les discussions ouvertes</a></li>
                    {% else %}
                        <li><a href="{{ path('proposal_show_locked_discussions', {'slug': proposal.slug}) }}">Voir les discussions fermées</a></li>
                    {% endif %}
                </ul>
            </div>
        {% endif %}
        <table class="table">
            {% if not proposal.discussions is empty %}
                <thead>
                    <tr>
                        <th>Discussion</th>
                        <th>Dernier commentaire</th>
                    </tr>
                </thead>
            {% endif %}
            <tbody>
                <!-- If the proposal is published we can have both closed and opened discussions. -->
                {% if is_granted('published', proposal) %}
                    {% for discussion in proposal.discussions %}
                        {% if locked_discussions %}
                            {% if is_granted('locked', discussion) %}
                                <tr>
                                    <td><a href="{{ path('public_discussion_show', {'slug': discussion.slug}) }}" class="table-link">{{ discussion.title }}</a></td>
                                    {% if discussion.posts is empty %}
                                        <td>Vide</td>
                                    {% else %}
                                        <td>{{ discussion.lastPost.date|date('d/m/Y à  H:i')}}</td>
                                    {% endif %}
                                </tr>
                            {% endif %}
                        {% else %}
                            {% if is_granted('published', discussion) %}
                                <tr>
                                    <td><a href="{{ path('public_discussion_show', {'slug': discussion.slug}) }}" class="table-link">{{ discussion.title }}</a></td>
                                    {% if discussion.posts is empty %}
                                        <td>Vide</td>
                                    {% else %}
                                        <td>{{ discussion.lastPost.date|date('d/m/Y à  H:i')}}</td>
                                    {% endif %}
                                </tr>
                            {% endif %}
                        {% endif %}
                    {% endfor %}
                <!-- If the proposal is locked then we have only closed discussions. -->
                {% else %}
                    {% for discussion in proposal.discussions %}
                        <tr>
                            <td><a href="{{ path('public_discussion_show', {'slug': discussion.slug}) }}" class="table-link">{{ discussion.title }}</a></td>
                            {% if discussion.posts is empty %}
                                <td>Vide</td>
                            {% else %}
                                <td>{{ discussion.lastPost.date|date('d/m/Y à  H:i')}}</td>
                            {% endif %}
                        </tr>
                    {% endfor %}
                {% endif %}
            </tbody>
        </table>
    </div>
{% endblock page_content %}
