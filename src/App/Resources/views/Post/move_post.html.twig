{% extends '::layout.html.twig' %}

{% block page_content %}
    <div class="row">
        <div class="col-md-10 col-md-offset-1 col-xs-10 col-xs-offset-1">
            <div class="row">
                <div class="col-md-10 col-md-offset-2">
                    <h1>Déplacement du commentaire</h1>
                    <div class="post">
                        <div class="post-header row">
                            <span class="post-author col-md-2 col-md-offset-1 col-xs-2 col-xs-offset-1">{{ post.author }}</span>
                            <span class="col-md-2 col-md-offset-6 col-xs-2 col-xs-offset-6">{{ post.date|date('d/m/Y H:i') }}</span>
                        </div>
                        <div class="post-content">
                            {{ post.content }}
                        </div>
                    </div>
                </div>
            </div>

            {{ form_start(form, {'attr': {'class': 'form-horizontal'}}) }}
                <div class="form-group row">
                    <div class="col-md-10 col-md-offset-2">
                        {{ form_errors(form) }}
                        {{ form_errors(form.discussion) }}
                    </div>
                </div>
                <div class="form-group row">
                    {{ form_label(form.discussion, 'Discussion d\'accueil', {'label_attr': {'class': 'control-label col-md-2'}}) }}
                    <div class="col-md-10">
                        {{ form_widget(form.discussion) }}
                    </div>
                </div>
                <div class="form-group row">
                    <div class="col-md-2 col-md-offset-2">
                        {{ form_widget(form.save, {'label': 'Déplacer', 'attr': {'class': 'btn btn-default custom-btn'}}) }}
                    </div>
                </div>
            {{ form_end(form) }}
        </div>
    </div>
{% endblock page_content %}
